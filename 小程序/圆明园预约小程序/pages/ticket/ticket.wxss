.container{
	min-height: 100vh;
	background-color: #f5f5f5;
	padding-bottom: 122rpx;
	width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
/* 门票名称 */
.ticketName{
	background-color: #fff;
	padding: 30rpx 20rpx;
}
.ticketName .ticketNameTxt{
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	line-height: 50rpx;
}
.ticketName .ticketType{
	display: inline-block;
	font-size: 24rpx;
	color: #00b3fd;
	border-radius: 10rpx;
	padding: 0 10rpx;
	line-height: 40rpx;
	margin-left: 20rpx;
	background-color: #ddf3ff;
}
.ticketName .ticketDesc{
	font-size: 24rpx;
	color: #009F95;
	line-height: 40rpx;
}
.ticketName .checkTime{
	font-size: 24rpx;
	color: #00b3fd;
	line-height: 40rpx;
}
/* 购票须知 */
.noticeView{
	background-color: #fff;
	padding: 30rpx 20rpx;
	border-top: 1rpx solid #f5f5f5;
}
.noticeTitle{
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	padding-left: 10rpx;
	border-left: 10rpx solid #00B3FD;
	line-height: 40rpx;
	margin-bottom: 10rpx;
}
.noticeText{
	font-size: 24rpx;
	color: #333;
	line-height: 46rpx;
	margin-bottom: 10rpx;
	padding-left: 20rpx;
	display: block;
}
/* 预定时间 */
.ticketTime{
	background-color: #fff;
	padding: 20rpx;
	border-top: 1rpx solid #f5f5f5;
}
.ticketTime .ticketTimeTitle{
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	padding-left: 10rpx;
	border-left: 10rpx solid #00B3FD;
	line-height: 40rpx;
	margin-bottom: 10rpx;
}
.ticketTime .timeText{
	padding-left: 20rpx;
	font-size: 26rpx;
	color: #333;
	line-height: 70rpx;
}
.ticketTime .timeTitle{
	font-size: 30rpx;
	color: #333;
	font-weight: bold;
	padding-bottom: 20rpx;
}
.ticketTime .timeInput{
	border: none;
	width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
	font-size: 28rpx;
	color: #333;
	padding: 0 20rpx;
	background-color: #fff;
}
.ticketTime .dateInput{
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	border: none;
	font-size: 28rpx;
	color: #333;
	padding: 0 20rpx;
	background-color: #fff;
}
.ticketTime .timeView{
	width: 400rpx;
	height: 70rpx;
	border: 1rpx solid #92B8B1;
	border-radius: 10rpx;
	display: flex;
	justify-content: start;
	align-items: center;
	overflow: hidden;
	position: relative;
}
.ticketTime .timeView .ticketPrice{
	font-size: 28rpx;
	color: #333;
}
.ticketTime .timeView .timeSelectBtn{
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	opacity: 0;
}

/* 门票数量 */
.ticketNumber{
	background-color: #fff;
	padding: 20rpx;
	border-top: 1rpx solid #f5f5f5;
	display: flex;
	justify-content: start;
	align-items: center;
}
.ticketNumber .numberText{
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
}
.ticketNumber .numberView{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.ticketNumber .numberView button{
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  margin: 0;
  line-height: 52rpx;
  background-color: #00B3FD;
  color: #fff;
  font-size: 40rpx;
  transition: all .3s;
}
.ticketNumber .numberView input{
  width: 100rpx;
  text-align: center;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
}
.ticketNumber .numberView .subBtn{
  margin-right: 20rpx;
}
.ticketNumber .numberView .addBtn{
  margin-left: 20rpx;
}

/* 证件类型 */
.certType{
	background-color: #fff;
	padding: 20rpx;
	border-top: 1rpx solid #f5f5f5;
}
.certType .certText{
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	padding-left: 10rpx;
	border-left: 10rpx solid #00B3FD;
	line-height: 40rpx;
	margin-bottom: 10rpx;
}
.picker{
	font-size: 26rpx;
	color: #333;
}
.radioView{
	display: flex;
	justify-content: flex-start;
	align-items: center;
	padding: 0 20rpx;
}
.weui-check__label{
	flex: 1;
}
.weui-cell__hd{
	display: flex;
	justify-content: start;
	align-items: center;
	font-size: 26rpx;
	color: #333;
	padding: 10rpx 0;
}
radio .wx-radio-input{
  width: 36rpx;
  height: 36rpx;
}
radio .wx-radio-input.wx-radio-input-checked{
	width: 36rpx;
	height: 36rpx;
	border-color: #00b3fd !important;
	background: #00b3fd !important;
}

/* 游客信息 */
.visitorInfo{
	background-color: #fff;
	padding: 30rpx 20rpx;
	margin-top: 20rpx;
}
.visitorTitle{
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	padding-left: 10rpx;
	border-left: 10rpx solid #00B3FD;
	line-height: 40rpx;
	margin-bottom: 10rpx;
}
.visitor{
	padding: 20rpx 0;
	border-top: 10rpx solid #f5f5f5;
}
.visitor:nth-of-type(1){
	border: none;
}
.itemInfo{
	display: flex;
	justify-content: start;
	align-items: center;
	font-size: 28rpx;
	color: #333;
	line-height: 70rpx;
	padding: 10rpx 0;
	border-bottom: 1rpx solid #f5f5f5;
}
.itemInfo view{
	flex: 0 0 150rpx;
	text-align: center;
}
.itemInfo input{
	height: 70rpx;
	flex: 1;
	border: none;
}

/* 疫情防控 */
.yqView{
	background-color: #fff;
	padding: 30rpx 20rpx;
	margin-top: 20rpx;
}
.yqView .fyTitle{
	font-size: 28rpx;
	margin-bottom: 20rpx;
}
.yqView .radioItem{
	padding: 20rpx 0;
	border-top: 1rpx solid #f5f5f5;
}
.yqView .radioItem:nth-of-type(1){
	border: none;
}
/* 在线支付 */
.priceView{
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #fff;
	display: flex;
	justify-content: start;
	align-items: center;
  border-top: 1rpx solid #f5f5f5;
  z-index: 999;
}

.priceView .priceLeft{
	line-height: 90rpx;
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 28rpx;
	color: #333;
}
.priceView .priceLeft .priceText{
	font-size: 40rpx;
	font-weight: bold;
	color: #ff5500;
}
.priceView .payBtn{
  display: block;
  border-radius: 0;
  height: 90rpx;
  flex: 0 0 170rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #ff5500;
  color: #fff;
  font-size: 30rpx;
  padding: 0;
  margin: 0;
}

/* 询问层样式 */
.hoverView{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.hoverView .hoverContent{
  width: 660rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding-top: 30rpx;
}
.hoverView .hoverContent .hoverTitle{
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.hoverContent .hoverItem{
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 26rpx;
  padding: 0 20rpx;
}
.hoverContent .hoverItem .hoverTxt{
  flex: 0 0 130rpx;
  text-align: right;
}
.hoverContent .visitorItem{
  padding-top: 20rpx;
}
.hoverContent .hoverItem .hoverTxt{
  color: #00B3FD;
}
.hoverContent .btnView{
  display: flex;
  justify-content: start;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
  margin-top: 20rpx;
}
.hoverContent .btnView view{
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #00b3fd;
  font-weight: bold;
  line-height: 70rpx;
}
.hoverContent .btnView .cancelBtn{
  border-right: 1rpx solid #f5f5f5;
  color: #333;
}

.noticeContent{
	box-sizing: border-box;
	padding: 0 40rpx 40rpx;
}
.noticeContent text{
	font-size: 24rpx;
	color: #333;
	line-height: 40rpx;
}