.container{
  padding: 25rpx;
  padding-bottom: 130rpx;
}


.noticeView{
  position: fixed;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  left: 0;
  right: 0;
  top: 30rpx;
  z-index: 999;
}
.noticeContent{
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx #ccc;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.noticeContent image{
  width: 20px;
  height: 20px;
  margin-right: 20rpx;
}
.notice_txt{
  width: 600rpx;
  white-space: nowrap;
  overflow-x: hidden;
  position: relative;
  height: 20px;
}
.notice_txt text{
  line-height: 20px;
}
.marquee_box {
  width: 100%;
  position: relative;
}
.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
}

/* banner */
.banner{
  height: 360rpx;
}
.banner image{
  width: 100%;
  border-radius: 10rpx;
}

/* 购票 */
.ticket-view{
  width: 100%;
  position: relative;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e3e5e7;
}
.ticket-view .ticket-bg{
  width: 100%;
}
.ticket-view .ticket-content{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ticket-view .ticket-content .scan-btn{
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: -50rpx;
}
.ticket-view .ticket-content .scan-btn image{
  width: 230rpx;
  height: 230rpx;
}

/* 为你推荐 */
.recommend-view{
  padding: 20rpx 15rpx;
}
.title{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  margin-bottom: 14rpx;
}

.recommend-item{
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.recommend-item image{
  width: 100%;
  display: block;
}
.recommend-item .recommend-item-content{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  padding: 15rpx 15rpx 20rpx 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.recommend-item .recommend-item-content .recommend-type{
  background-color: #fff;
  color: #3e3a39;
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  width: 70rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 6rpx;
}
.recommend-item .recommend-item-content .recommend-name{
  font-size: 30rpx;
  color: #ffffff;
  font-weight: bold;
}
.recommend-bottom{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.recommend-bottom .recommend-item{
  width: 335rpx;
}

/* tabbar */
.tabbar{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 20rpx;
  background-color: #fff;
}
.tabbar-content{
  display: flex;
  justify-content: start;
  align-items: center;
  border-top: 1rpx solid #e3e5e7;
  padding: 15rpx 0;
}
.tabbar-item{
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  font-size: 21rpx;
  color: #91999e;
  width: 20%;
}
.tabbar-item image{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}
.tabbar-content .scan-btn{
  position: relative;
}
.tabbar-content .scan-btn image{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: -90rpx;
}

/* 提示框部分样式 */
.modal-view{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-title{
  font-size: 32rpx;
  color: #333;
  text-align: center;
  line-height: 70rpx;
}
.modal-content{
  width: 650rpx;
  background-color: #fff;
  border-radius: 6rpx;
  overflow: hidden;
  transform: rotate(360deg);
  transition: .5s;
}
.modal-content image{
  width: 100%;
  height: 400rpx;
  display: block;
}
.modal-content .modal-txt{
  padding: 0 20rpx;
}
.modal-content .modal-txt .txt-item{
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 20rpx 0;
}
.modal-content .modal-txt .txt-item view{
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}
.btn-view{
  display: flex;
  justify-content: start;
  align-items: center;
}
.btn-view view{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  line-height: 80rpx;
  background-color: rgba(233, 239, 243, 0.74);
}
.btn-view .cancle-btn{
  border-right: 1rpx solid #ddd;
  color: #666;
}
.btn-view .explain-btn{
  color: #0059ff;
}