.container{
  min-height: 100vh;
  background-color: #f0f0f0;
  padding: 20rpx;
  box-sizing: border-box;
  padding-bottom: 82rpx;
}
.title{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  padding-left: 10rpx;
  border-left: 10rpx solid #ff5500;
  margin-bottom: 20rpx;
}
.content-box{
  background-color: #fff;
  border-radius: 10rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
}
.desc-view{
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
}
.desc-view view{
  margin: 5rpx;
}

.price-view{
  font-size: 28rpx;
  color: #333;
}

.select-view{
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.select-btn{
  width: 110rpx;
  line-height: 50rpx;
  border: 1rpx solid #ddd;
  text-align: center;
  border-radius: 5rpx;
  padding-right: 30rpx;
  position: relative;
}
.select-btn image{
  position: absolute;
  right: 10rpx;
  top: 50%;
  width: 20rpx;
  margin-top: -5rpx;
}

.bottom-view{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  border-top: 1rpx solid #ddd;
}
.bottom-view view{
  flex: 1;
  text-align: center;
}
.bottom-view .buy-btn{
  flex: 0 0 300rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #ff5500;
  border-radius: 0;
  line-height: 80rpx;
}
.bottom-view .buy-btn::after{
  border-radius: 0;
}