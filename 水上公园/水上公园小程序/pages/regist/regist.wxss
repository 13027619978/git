/* pages/regist/regist.wxss */
.container{
  padding: 20rpx;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content{
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.phone-view{
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  padding: 0 10rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.regist-btn{
  width: 100%;
  background-color: #ff5500;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.bg-img{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100vh;
}
.desc{
  font-size: 28rpx;
  color: #333;
  margin-top: 40rpx;
}