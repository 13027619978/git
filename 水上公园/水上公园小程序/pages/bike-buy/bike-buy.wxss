/* pages/bike-buy/bike-buy.wxss */
.container{
  padding: 20rpx;
  background-color: #f0f0f0;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

.box-content{
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #ff5500;
  line-height: 50rpx;
  margin-bottom: 20rpx;
}
.title{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.price{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.price-item{
  font-size: 28rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.price-item>view{
  display: flex;
  justify-content: start;
  align-items: center;
}
.price-item .price-txt{
  font-size: 32rpx;
  font-weight: bold;
  color: #ff5500;
}

.buy-btn{
  background-color: #ff5500;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
}

.phone-view{
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #ddd;
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #333;
  border-radius: 5rpx;
}