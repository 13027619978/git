/* pages/bike-success/bike-success.wxss */
.container{
  padding: 20rpx 0;
  background-color: #f0f0f0;
  min-height: 100vh;
  box-sizing: border-box;
}
.order-info{
  background-color: #fff;
  padding: 20rpx;
}
.label-item:nth-of-type(1){
  border-top: none;
}
.qrCode-view{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.qrCode-view .qrCode{
  width: 200px;
  height: 200px;
  background-color: #000;
}
.label-item{
  display: flex;
  justify-content: start;
  align-items: center;
  border-top: 1rpx solid #ddd;
  padding: 20rpx 0;
}
.label-item .label-name{
  flex: 0 0 200rpx;
  text-align: right;
  font-size: 28rpx;
  color: #333;
}
.label-item .label-info{
  flex: 1;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #ff5500;
}

.order-desc{
  padding: 20rpx;
}
.title{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.desc-info{
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}
.desc-info view{
  margin-bottom: 10rpx;
}